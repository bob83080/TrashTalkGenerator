<div class="container py-3">

  {{!-- form --}}

  <form method="POST" action="/">

    <div class="row justify-content-around">
      {{#each position}}
      <div class="d-flex flex-column align-items-center ">
        <img src="{{this.avatar}}" class="img-fluid rounded mb-2" style="width: 320px; height: 250px;"
          alt="{{this.title}}">
        <div class="form-check">
          <label class="form-check-label" style="color: white;">
            <input class="form-check-input " type="radio" name="job" value="{{this.job}}">
            {{this.title}}
          </label>
        </div>
      </div>
      {{/each}}
    </div>

    {{!-- text box --}}
    <div class="row justify-content-center py-3">
      <button class="btn btn-success px-2 align-items-center" type="submit"
        style="height:50px; margin-top:auto; margin-bottom:auto; margin-right:5px">產生幹話</button>
      <textarea placeholder="不知道要說什麼？？？ " readonly class="col-sm-10 px-2 rounded"
        style="height:100px; font-size:18px;">{{#if rubbishtalk}}{{rubbishtalk}}{{/if}}</textarea>

    </div>

